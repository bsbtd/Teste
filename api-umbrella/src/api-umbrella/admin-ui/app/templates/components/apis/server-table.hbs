{{apis/server-form model=serverModel collection=model.servers apiBackendProtocol=model.backendProtocol apiBackendHost=model.backendHost openModal=openModal}}

<table id="servers_table" class="table table-striped table-sm">
  <thead>
    <tr>
      <th>{{t "admin.api.servers.server"}}</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#if model.servers}}
      {{#each model.servers as |server|}}
        <tr>
          <td>{{model.backendProtocol}}://{{server.hostWithPort}}</td>
          <td class="table-row-actions">
            <a href="#" {{action "edit" server}}>{{fa-icon "pencil-alt"}}{{t "admin.edit"}}</a>
            <a href="#" class="remove-action" {{action "remove" server}}>{{fa-icon "times"}}{{t "admin.remove"}}</a>
          </td>
        </tr>
      {{/each}}
    {{else}}
      <tr class="empty"><td colspan="2">{{t "admin.api.servers.empty_list" add=(t "admin.api.servers.add")}}</td></tr>
    {{/if}}
  </tbody>
</table>
<button type="button" class="btn btn-light btn-sm" {{action "add"}}>{{fa-icon "plus-circle"}} {{t "admin.api.servers.add"}}</button>
